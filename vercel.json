{
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },                         // serve real files first
    { "src": "/api/(.*)",       "dest": "/api/$1.js" },  // your serverless functions
    { "src": "/(.*)",           "dest": "/index.html" }  // SPA fallback
  ]
}
